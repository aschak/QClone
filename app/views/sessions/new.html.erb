      <h2 id='welcome-statement-left'> A Place to Seek Knowledge...</h2>

      <h2 id='welcome-statement-right'>..And Share Knowledge</h2>


  <div class="splash-container" id='user-login-form'>
    <h2 id='login-prompt'>Sign In</h2>

    <br/>

    <form class="user-login-form" action="<%= session_url %>" method="post">
      <%= auth_token %>

      <input
        type="text"
        id="user-login-input"
        name="user[username]"
        placeholder="Username"
        value="">

      <br/>

        <input
          type="password"
          id="user-login-input"
          name="user[password]"
          placeholder="Password"
          value="">

      <br/>
      <br/>

      <input
        class="btn btn-primary"
        type="submit"
        value="Sign In">
    </form>

    <br/>
    <%= link_to "Sign Up", new_user_url, class: "btn btn-primary", id: "user-signup" %>
    <br/>

    <form class="guest-user-login" action="<%= session_url %>" method="post">
      <%= auth_token %>

      <input
        type="hidden"
        name="user[username]"
        value="Guest_Seeker">

      <input
        type="hidden"
        name="user[password]"
        value="AlwaysSeeking">

      <input
        class="btn btn-primary"
        type="submit"
        value="Guest Login">
    </form>

  </div>
